// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  name      String?
  image     String?     // Base64 or URL
  role      String      @default("USER") // "USER" or "ADMIN"
  news      News[]
  posts     ForumPost[]
  comments  Comment[]
  likes     Like[]
  conversations Conversation[]
  messages      Message[]
  tebCoins      Int         @default(100)
  leTebFreeSpins Int        @default(0)
  itemsSold     MarketplaceItem[] @relation("ItemsSold")
  itemsBought   MarketplaceItem[] @relation("ItemsBought")
  lastDailyDrop DateTime?
  lastIp        String?
  lastSeen      DateTime?
  
  // CS2 Relations
  inventory     UserItem[]
  battlesCreated CaseBattle[] @relation("BattleCreator")
  battlesJoined  CaseBattle[] @relation("BattleJoiner")
  battlesWon     CaseBattle[] @relation("BattleWinner")

  createdAt     DateTime    @default(now())
}

model News {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}

model ForumPost {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  comments  Comment[]
  likes     Like[]
  attachments ForumAttachment[]
}

model ForumAttachment {
  id        String   @id @default(cuid())
  data      Bytes
  name      String
  type      String
  size      Int
  createdAt DateTime @default(now())
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model ActiveVisitor {
  id        String   @id
  lastPing  DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  authorId  String
  postId    String
  author    User     @relation(fields: [authorId], references: [id])
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id])
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model Conversation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User[]
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  body           String?
  image          String?
  createdAt      DateTime     @default(now())
  seen           Boolean      @default(false)
}

model MarketplaceItem {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int
  category    String   // e.g., "Books", "Electronics", "Tutoring", "Other"
  imageUrl    String?
  status      String   @default("AVAILABLE") // "AVAILABLE", "SOLD"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  sellerId    String
  seller      User     @relation("ItemsSold", fields: [sellerId], references: [id])
  
  buyerId     String?
  buyer       User?    @relation("ItemsBought", fields: [buyerId], references: [id])
  
  secretContent String? // Content visible only to the buyer (e.g. link, code)
}

// --- CS2 Case & Battle System ---

model Skin {
  id        String   @id @default(cuid())
  name      String
  image     String   // URL to image
  rarity    String   // "common", "uncommon", "rare", "mythical", "legendary", "ancient", "contraband"
  price     Int      // Value in TebCoins
  cases     Case[]   // Cases containing this skin
  userItems UserItem[]
}

model Case {
  id        String   @id @default(cuid())
  name      String
  image     String
  price     Int      // Cost to open
  skins     Skin[]   // Possible skins
}

model UserItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  skinId    String
  skin      Skin     @relation(fields: [skinId], references: [id])
  status    String   @default("INVENTORY") // "INVENTORY", "SOLD", "BET_IN_BATTLE"
  createdAt DateTime @default(now())
}

model CaseBattle {
  id        String   @id @default(cuid())
  status    String   @default("WAITING") // "WAITING", "PLAYING", "FINISHED", "CANCELLED"
  caseId    String
  casePrice Int
  createdAt DateTime @default(now())
  
  creatorId String
  creator   User     @relation("BattleCreator", fields: [creatorId], references: [id])
  
  joinerId  String?
  joiner    User?    @relation("BattleJoiner", fields: [joinerId], references: [id])
  
  winnerId  String?
  winner    User?    @relation("BattleWinner", fields: [winnerId], references: [id])
  
  rounds    CaseBattleRound[]
}

model CaseBattleRound {
  id        String     @id @default(cuid())
  battleId  String
  battle    CaseBattle @relation(fields: [battleId], references: [id], onDelete: Cascade)
  roundNum  Int
  
  // Results
  creatorSkinId String?
  joinerSkinId  String?
}
